<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config cleartextTrafficPermitted="true">
        <!-- Allow cleartext traffic for local network connections -->
        <domain includeSubdomains="false">192.168.49.79</domain>
        <domain includeSubdomains="false">192.168.49.1</domain>
        <domain includeSubdomains="false">192.168.49.0</domain>
        <domain includeSubdomains="false">192.168.0.0</domain>
        <domain includeSubdomains="false">10.0.0.0</domain>
        <domain includeSubdomains="false">172.16.0.0</domain>
        <domain includeSubdomains="false">localhost</domain>
    </domain-config>
    
    <!-- Default configuration - require HTTPS for all other connections -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config> 